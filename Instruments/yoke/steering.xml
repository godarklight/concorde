<?xml version="1.0" ?> 

<PropertyList> 
 <path>steering.ac</path> 

 <animation>
  <type>rotate</type>
  <object-name>Steering</object-name>
  <property>controls/flight/rudder</property>
  <factor>-15</factor>
  <offset-deg>0</offset-deg>   
  <condition>
   <property>controls/crew/steering/wheel</property>
  </condition>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

</PropertyList>
