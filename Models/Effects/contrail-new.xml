<?xml version="1.0"?>

<PropertyList>

	<particlesystem>
		<name>contrail</name>
		<type>normal</type>
		<texture>smoke.png</texture>
		<emissive>false</emissive>
		<lighting>true</lighting>

		<offsets>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</offsets>

		<condition>
			<and>
				<!--<greater-than>
					<property>/environment/relative-humidity</property>
					<value>60</value>
				</greater-than>
				<less-than>
					<property>/environment/temperature-degc</property>
					<value>0</value>
				</less-than>-->
				<property>environment/contrail</property>
				<greater-than>
					<property>velocities/airspeed-kt</property>
					<value>100</value>
				</greater-than>
				<!--<or>
					<less-than>
						<property>surface-positions/tail-flaps-pos-norm</property>
						<value>-0.25</value>
					</less-than>
					<less-than>
						<property>surface-positions/elevator-pos-norm</property>
						<value>-0.25</value>
					</less-than>
					<greater-than>
						<property>surface-positions/elevator-pos-norm</property>
						<value>0.25</value>
					</greater-than>
				</or>-->
                                <property>controls/environment/contrails</property>
			</and>
		</condition>-->

		<attach>world</attach>

		<placer>
			<type>point</type>
		</placer>

		<shooter>
			<theta-min-deg>80</theta-min-deg>
			<theta-max-deg>100</theta-max-deg>
			<phi-min-deg>-10.0</phi-min-deg>
			<phi-max-deg>10.0</phi-max-deg>

			<speed-mps>
				<value>0.01</value>
				<spread>20</spread>
			</speed-mps>
			<rotation-speed>
				<x-min-deg-sec> -20 </x-min-deg-sec>
				<y-min-deg-sec> -20 </y-min-deg-sec>
				<z-min-deg-sec> -20 </z-min-deg-sec>
				<x-max-deg-sec> 20 </x-max-deg-sec>
				<y-max-deg-sec> 20 </y-max-deg-sec>
				<z-max-deg-sec> 20 </z-max-deg-sec>
			</rotation-speed>
		</shooter>

		<counter>
			<particles-per-sec>
				<property>/velocities/airspeed-kt</property>
				<factor>0.25</factor>
				<offset>10</offset>
				<!--<value>600</value>-->
				<spread>50</spread>
			</particles-per-sec>
		</counter>

		<align>billboard</align>

		<particle>
			<start>
				<color>
					<red>
						<value>1.0</value>
					</red>
					<green>
						<value>1.0</value>
					</green>
					<blue>
						<value>1.0</value>
					</blue>
					<alpha>
						<value>0.20</value>
					</alpha>
				</color>
				<size>
					<value>1.25</value>
				</size>
			</start>
			<end>
				<color>
					<red>
						<value>1.0</value>
					</red>
					<green>
						<value>1.0</value>
					</green>
					<blue>
						<value>1.0</value>
					</blue>
					<alpha>
						<value>0.15</value>
					</alpha>
				</color>
				<size>
					<value>45.0</value>
				</size>
			</end>
			<life-sec>
				<value>10.0</value>
			</life-sec>
			<mass-kg>0.01</mass-kg>
			<radius-m>0.1</radius-m>
		</particle>

		<program>
			<fluid>air</fluid>
			<gravity>true</gravity>
			<wind>true</wind>
		</program>

	</particlesystem>

</PropertyList>
