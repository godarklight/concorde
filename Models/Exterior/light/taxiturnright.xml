<PropertyList>
  <path>taxiturn.ac</path>

 <animation>
  <type>rotate</type>
  <object-name>TaxiTurn</object-name>
  <offset-deg>180</offset-deg>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>

 <animation>
  <type>noshadow</type>
  <object-name>TaxiTurn</object-name>
 </animation>

 <animation>
  <type>select</type>
  <object-name>TaxiTurn</object-name>
  <condition>
   <and include="../../../Panels/Instruments/concorde-cond-voltage-light.xml">
    <property>controls/lighting/external/taxi-turn[1]/on</property>
   </and>
  </condition>
 </animation>

 <animation>
  <type>material</type>
  <object-name>TaxiTurn</object-name>
  <emission>
   <red>1.0</red>
   <green>1.0</green>
   <blue>1.0</blue>
   <factor-prop>instrumentation/generic/factor</factor-prop>
  </emission> 
 </animation>

 <animation>
  <type>scale</type>
  <object-name>TaxiTurn</object-name>
  <property>sim/time/sun-angle-rad</property>
  <x-min>1</x-min>
  <y-min>1</y-min>
  <z-min>1</z-min>
  <x-offset>-1.4</x-offset>
  <y-offset>-1.4</y-offset>
  <z-offset>-1.4</z-offset>
  <x-factor>1.3</x-factor>
  <y-factor>1.3</y-factor>
  <z-factor>1.3</z-factor>
 </animation>

</PropertyList>
