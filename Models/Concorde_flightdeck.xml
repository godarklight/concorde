<!-- LIGHTING -->
<!-- ======== -->

  <animation>
   <name>Dash lighting</name>
   <object-name>MainPanel_1</object-name>
   <object-name>MainPanel_0</object-name>
  </animation>

  <animation>
   <name>Console lighting</name>
   <object-name>ConsoleForward</object-name>
   <object-name>ConsoleAft</object-name>
  </animation>

  <animation>
   <name>Engineer lighting</name>
   <object-name>Engineer</object-name>
   <object-name>EngineerAft</object-name>
  </animation>

  <animation>
   <name>Engineer lighting spot</name>
   <object-name>EngineerDeck</object-name>
   <object-name>EngineerLeft</object-name>
   <object-name>EngineerRight</object-name>
  </animation>

  <animation>
   <name>Rack lighting</name>
   <object-name>Avionics Racks</object-name>
  </animation>

  <animation>
   <name>All flight deck</name>
   <object-name>Overhead</object-name>
   <object-name>Left Top Console</object-name>
   <object-name>Panel</object-name>
   <object-name>Right Top Console</object-name>
   <object-name>Left Captain Foot Plate</object-name>
