<!-- buttons -->

 <group>
  <y>10</y>

  <button>
   <x>70</x>
   <y>0</y>
   <width>60</width>
   <height>35</height>
   <legend>Back</legend>
   <equal>true</equal>
   <key>b</key>
   <binding>
    <command>dialog-show</command>
    <dialog-name>Concorde-menu</dialog-name>
   </binding>
   <binding>
    <command>dialog-close</command>
   </binding>
  </button>

  <button>
   <x>230</x>
   <y>0</y>
   <width>60</width>
   <height>35</height>
   <legend>Apply</legend>
    <key>a</key>
   <equal>true</equal>
   <binding>
    <command>dialog-apply</command>
   </binding>
  </button>

  <button>
   <x>390</x>
   <y>0</y>
   <width>80</width>
   <height>35</height>
   <legend>Page 1</legend>
   <key>p</key>
   <binding>
    <command>dialog-apply</command>
   </binding>
   <binding>
    <command>dialog-show</command>
    <dialog-name>Concorde-instruments</dialog-name>
   </binding>
   <binding>
    <command>dialog-close</command>
   </binding>
  </button>

  <button>
   <x>570</x>
   <y>0</y>
   <width>60</width>
   <height>35</height>
   <legend>Close</legend>
   <default>true</default>
   <equal>true</equal>
   <key>Esc</key>
   <binding>
    <command>dialog-apply</command>
   </binding>
   <binding>
    <command>dialog-close</command>
   </binding>
  </button>

 </group>

</PropertyList>
