<?xml version="1.0"?>

<!-- - many instruments are common with engineer or copilot.
 -->

<PropertyList>

 <name>Concorde-instruments3</name>
 <width>700</width>
 <height>560</height>
 <modal>false</modal>

 <text>
  <x>30</x>
  <y>520</y>
  <label>Concorde Instruments</label>
 </text>

 <button>
  <x>675</x>
  <y>535</y>
  <width>16</width>
  <height>16</height>
  <legend></legend>
  <keynum>27</keynum>
  <border>2</border>
  <binding>
   <command>dialog-close</command>
  </binding>
 </button>

 <group>
  <y>500</y>

  <text>
   <x>370</x>
   <label>Uncheck an instrument to fail it.</label>
   <color>
     <red>0.5</red>
     <green>0.5</green>
     <blue>0.5</blue>
   </color>
  </text>

 </group>


