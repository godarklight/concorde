<?xml version="1.0"?>

<PropertyList>
  <name>Concorde-procedures6</name>
  <layout>vbox</layout>
  <width>500</width>

  <group>
    <layout>hbox</layout>
    
    <empty><stretch>1</stretch></empty>

    <text>
      <label>Concorde procedures 3</label>
    </text>

    <empty><stretch>1</stretch></empty>

    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>

  <hrule><dummy/></hrule>

  <group>
    <layout>vbox</layout>
    <halign>center</halign>

    <text>
      <label>Landing lights  ~</label>
    </text>

    <text>
      <label></label>
    </text>

    <text>
      <label></label>
    </text>

    <checkbox>
      <label>set landing lights</label>
      <halign>left</halign>
      <property>/controls/crew/landing-lights/set</property>
      <binding>
        <command>property-toggle</command>
        <property>/controls/crew/landing-lights/set</property>
      </binding>
    </checkbox>

    <text>
      <label>(only by checklist)</label>
      <color>
       <red>0.5</red>
       <green>0.5</green>
       <blue>0.5</blue>
      </color>
    </text>

    <text>
      <label></label>
    </text>

    <text>
      <label></label>
    </text>

    <text>
      <label>Include</label>
    </text>

    <text>
      <label></label>
    </text>

    <checkbox>
      <label>as required by visibility</label>
      <halign>left</halign>
      <property>/controls/crew/landing-lights/as-required</property>
      <binding>
       <command>property-toggle</command>
       <property>/controls/crew/landing-lights/as-required</property>
      </binding>
    </checkbox>

    <text>
      <label>(dusk/dawn or below 5000 m / 3 miles)</label>
      <color>
       <red>0.5</red>
       <green>0.5</green>
       <blue>0.5</blue>
      </color>
    </text>

    <text>
      <label></label>
    </text>

    <checkbox>
      <label>landing taxi in flight</label>
      <halign>left</halign>
      <property>/controls/crew/landing-lights/taxi</property>
      <binding>
       <command>property-toggle</command>
       <property>/controls/crew/landing-lights/taxi</property>
      </binding>
    </checkbox>

  </group>

  <text>
    <label></label>
  </text>

  <text>
    <label></label>
  </text>

  <group>
   <layout>hbox</layout>

   <button>
    <legend>Back</legend>
    <key>b</key>
    <binding>
     <command>dialog-show</command>
     <dialog-name>Concorde-procedures4</dialog-name>
    </binding>
    <binding>
      <command>dialog-close</command>
    </binding>
   </button>

   <button>
    <legend>Close</legend>
    <default>true</default>
    <key>Esc</key>
    <binding>
      <command>dialog-close</command>
    </binding>
   </button>

  </group>
</PropertyList>
